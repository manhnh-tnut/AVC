<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AVC</title>
    <link rel="icon" href="~/img/avc.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/dx/css/dx.common.css" />
    <link rel="stylesheet" href="~/lib/dx/css/dx.light.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
</head>

<body>
    <div class="container-fluid">
        <div class="row min-vh-100 flex-column flex-md-row">
            <header class="col-12 col-md-2 flex-shrink-1 bg-light">
                <nav class="navbar navbar-expand flex-md-column flex-row align-items-start py-2">
                    <div class="collapse navbar-collapse ">
                        <ul class="flex-md-column flex-row navbar-nav w-100 justify-content-between">
                            <li class="nav-item">
                                <a class="nav-link pl-0 text-nowrap" asp-area="" asp-controller="Home"
asp-action="Index">
                                    <i class="dx-icon-columnfield"></i> <span class="font-weight-bold">Giám sát
                                        Real-time</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pl-0" asp-area="" asp-controller="setting" asp-action="Index">
                                    <i class="dx-icon-preferences"></i> <span class="d-none d-md-inline">Thiết lập thông
                                        số</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pl-0" asp-area="" asp-controller="home" asp-action="report">
                                    <i class="dx-icon-xlsxfile"></i> <span class="d-none d-md-inline">Báo cáo – Phân
                                        tích</span>
                                </a>
                            </li>
                            @* <li class="nav-item">
                                <a class="nav-link pl-0" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="dx-icon-globe"></i> <span class="d-none d-md-inline">Link</span>
                                </a>
                                </li> *@
                            <partial name="_LoginPartial" />
                        </ul>
                    </div>
                </nav>
            </header>
            <partial name="_CookieConsentPartial" />
            <main class="col bg-faded py-3 flex-grow-1">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </main>
            <footer class="border-top footer text-muted">
                <div class="container"><img id="logo-img" />&copy; @(DateTime.Now.Year)</div>@* - <a asp-area=""
                    asp-controller="Home"
                    asp-action="Privacy">Privacy</a> *@
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/dx/scripts/jszip.min.js" asp-append-version="true"></script>
    <script src="~/lib/dx/scripts/cldr.min.js" asp-append-version="true"></script>
    <script src="~/lib/dx/scripts/event.min.js" asp-append-version="true"></script>
    <script src="~/lib/dx/scripts/supplemental.min.js" asp-append-version="true"></script>
    <script src="~/lib/dx/scripts/globalize.min.js" asp-append-version="true"></script>
    <script src="~/lib/dx/scripts/currency.min.js" asp-append-version="true"></script>
    <script src="~/lib/dx/scripts/number.min.js" asp-append-version="true"></script>
    <script src="~/lib/dx/scripts/date.min.js" asp-append-version="true"></script>
    <script src="~/lib/dx/scripts/dx.all.js" asp-append-version="true"></script>
    <script src="~/lib/dx/scripts/polyfill.min.js" asp-append-version="true"></script>
    <script src="~/lib/dx/scripts/exceljs.min.js" asp-append-version="true"></script>
    <script src="~/lib/dx/scripts/FileSaver.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/layout.js" asp-append-version="true"></script>
    <script>
        let token = $($('@Html.AntiForgeryToken()')).val();
    </script>
    @RenderSection("Scripts", required: false)
</body>

</html>
